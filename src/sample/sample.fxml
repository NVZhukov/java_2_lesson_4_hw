<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="sample.Controller">

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>


    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Open" />
                <MenuItem text="Save" />
                <MenuItem onAction="#clickClose" text="Close" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <TextArea fx:id="textArea" editable="false" />
    </center>

    <bottom>
        <AnchorPane>
            <TextField fx:id="textField" onAction="#sendMsg" promptText="Your message..." AnchorPane.leftAnchor="0"
            AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="70"/>
            <Button fx:id="btn1" onAction="#sendMsg" text="send..." AnchorPane.rightAnchor="0" />
        </AnchorPane>
    </bottom>

</BorderPane>
